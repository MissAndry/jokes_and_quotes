<% @posts.each do |post| %>
	
	<div class="post-index-individual">

		<span id="<%= post.id %>" class="votes">
			<div class="post-upvote">
				<% if @votes %>
					<%= link_to "", post_votes_path(post), method: VoteHelper.find_method(@votes, post), remote: true %>
				<% end %>
			</div>

			<div class="post-vote-count">
				<p>
				  <% if post.votes != nil %> 
					  <%= Vote.tally(post.id, post.class) %> points
				  <% else %> 
					  0 points
					<% end %>
				</p>
			</div>

			<div class="post-downvote">
				<% if @votes %>
					<%= link_to "", post_votes_path(post), method: VoteHelper.find_method(@votes, post), remote: true %>
				<% end %>
			</div>
		</span>

		<ul class="post-index">
			<li> Username: <%= post.user.username %> </li>
			<li> Posted on: <%= post.created_at  %></li>
			<li> <%= post.text %></li>
			<li>
				<% if post.comments != nil %>
					<%= post.comments.count %> comments
				<% else %> 
						0 comments
				<% end %>
			</li>
		</ul>
	</div>

<% end %>
	
