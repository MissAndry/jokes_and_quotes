<div class= "signup-title">
<h2> Hey there, <%= @user.first_name %>! </h2>
<h3> Jokquots You Have Created </h3>
  <% @posts.each do |post| %>
    <p><%= link_to "#{post.text}", post_path(post)%></p>
    <p><%= post.votes.sum(:value) %> points <%= post.comments.count %> comments</p>
  <% end %>

<h3> You Have Downvoted <%= @down_votes.count %> Jokquots </h3>
  <% @down_votes.each do |vote| %>
    <% found_post = Post.find(vote.voteable_id) %>
    <p><%= link_to "#{found_post.text}", post_path(found_post) %></p>
  <% end %>

<h3> You Have Upvoted <%= @up_votes.count %> Jokquots </h3>
  <% @up_votes.each do |vote| %>
    <% found_post = Post.find(vote.voteable_id) %>
    <p><%= link_to "#{found_post.text}", post_path(found_post) %></p>
  <% end %>

<h3> You Have Commented On <%= @comments.count %> Jokquots</h3>
  <% @comments.each do |comment| %>
    <% found_post = Post.find(comment.commentable_id) %>
    <p><%= link_to "#{found_post.text}", post_path(found_post) %></p>
    <% end %>
</div>

