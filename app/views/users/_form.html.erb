<div class="signup-form">
  <%= form_for :user, url: users_path do |f| %>
   <p>
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </p>

    <p>
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </p>
    <%= @already_email_error if @already_email_error %>
    <p>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </p>

    <p>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </p>

    <p>
      <%= f.submit "Sign Up", class: "submit-user-button" %>
    </p>
  <% end %>
</div>
